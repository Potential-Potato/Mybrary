<div>
    <label for="">Title</label>
    <input type="title" value="<%= bookObject.title %>">
</div>
<div>
    <label for="">Author</label>
    <select name="authorLoop">
    <% authorsObject.forEach(author => { %>
        <% if (author.id === bookObject.author) {  %>
            <option label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %>
    <% }) %>
    </select>   
</div>
<div>
    <label for="">Publish Date</label>
    <input type="date" name="publishDate"
        value="<%= bookObject.publishDate == null ? '' : bookObject.publishDate.toISOString().split('T')[0]%>">
</div>
<div>
    <label for="">Page Count</label>
    <input type="number" name="pageCount" min="1" value="<%= bookObject.pageCount%>">
</div>
<div>
    <label for="">Cover</label>
    <input type="file" name="cover">
</div>
<div>
    <label for="">Description</label>
    <textarea name="description"><%= bookObject.description %></textarea>
</div>